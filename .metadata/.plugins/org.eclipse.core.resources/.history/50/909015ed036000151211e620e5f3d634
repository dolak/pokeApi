var Cloud = require("ti.cloud");
Cloud.debug = true;

var cloudLogin = function() {
	Cloud.Users.login({
		login : "admin",
		password : "admin"

	}, function(e) {
		console.log(e);
		if (e.success) {
			var api = require('api');
			api.getDUrl();
		}
	});
};

