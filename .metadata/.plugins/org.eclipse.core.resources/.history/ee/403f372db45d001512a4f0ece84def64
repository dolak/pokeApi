	var win = Ti.UI.createWindow({
		backgroundColor : "#8CC9D9"
	});
	
	var name = Ti.UI.createLabel({
		text : pokemonArr[0].name,
		color: "#232323",
		font: {
			fontSize: 40
		},
		top: 50
		
	});
	
	var type1 = Ti.UI.createLabel({
		text : pokemonArr[0].type1,
		color: "#232323",
		font: {
			fontSize: 30
		},
		top: 50, right: 10
		
	});
	
	var type2 = Ti.UI.createLabel({
		text : pokemonArr[0].type2,
		color: "#232323",
		font: {
			fontSize: 30
		},
		top: 80, right: 10
		
	});


	win.add(name);
	win.add(type1);
	win.add(type2);
	win.open();
};
