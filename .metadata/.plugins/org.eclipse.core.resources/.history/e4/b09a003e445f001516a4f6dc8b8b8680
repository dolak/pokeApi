var getData = function() {
	console.log("getData");

	var url = [];


	var newRequest = function(dex) {
		var save = require("database");
		var xhr = Ti.Network.createHTTPClient({
			onload : function(x) {
				console.log(x);
				console.log(this.responseText);
				var json = JSON.parse(this.responseText);

				var pokemonDesc = {
					descUrl : "http://pokeapi.co" + dex.desc
				};
				save.dataSave(pokemonDesc);
			},
			onerror : function(x) {
				console.log(x);
				alert("error pulling pokemon data, the error is: " + x.error);
			},
			timeout : 3000

		});

		xhr.open("GET", url[i]);
		xhr.send();
	};
	request(url);

	var request = function(url) {
		var save = require("database");
		var xhr = Ti.Network.createHTTPClient({
			onload : function(x) {
				console.log(x);
				console.log(this.responseText);
				var json = JSON.parse(this.responseText);

				if (json.types.length > 1) {
					var pokemonDex = {
						desc : json.description[0].resource_uri,
						name : json.name,
						type1 : json.types[0].name,
						type2 : json.types[1].name

					};
					save.dataSave(pokemonDex);
				} else {
					var pokemonDex = {

						name : json.name,
						type1 : json.types[0].name
					};
					save.dataSave(pokemonDex);
				}

			},
			onerror : function(x) {
				console.log(x);
				alert("error pulling pokemon data, the error is: " + x.error);
			},
			timeout : 3000

		});

		xhr.open("GET", url[i]);
		xhr.send();
	};
	request(url);
};
	var getUrl = function() {
		for (var i = 0; i < 10; i++) {
			var urlD = "http://pokeapi.co/api/v1/pokemon/" + i + "/";
			url.push(urlD);
		};
	};
	
	exports.getUrl = getUrl;


exports.getData = getData;
